	<!DOCTYPE html>
	<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GeoTagApp</title>
		<link rel='stylesheet' href='./stylesheets/style.css'/>
	</head>

	<body>

	<header>
		<img src="./images/location.png" width="100"
			 alt="an image of a map and location">
		<h1>GeoTagApp</h1>
		<nav>
			<a href="#">About</a> | <a href="#">Help</a> | <a
					href="/">Home</a>
		</nav>
	</header>

	<main>

		<section class="tagging" >
			<h2>Tagging</h2>

			<!-- ############### Aufgabe1a Form1 Start -->
			<form id="tag-form" action="/tagging" method="post">
				<fieldset>
					<legend>Neuen Tag hinzufügen:</legend>
					<label>Latitude:</label>		<input name="latitude" type="text" id="tag_latitude" placeholder="49.01379" pattern="[0-9]+([.][0-9]+)?" required>
					<label>Longitude:</label>		<input name="longitude" type="text" id="tag_longitude" placeholder="49.01379" pattern="[0-9]+([.][0-9]+)?" required>
					<label>Name:</label>			<input name="name" type="text" id="tag_name" placeholder="Castle" pattern=".+" maxlength="10" required>
					<label>Hashtag:	</label>		<input name="hashtag" type="text" id="tag_hashtag" placeholder="#hashtag" pattern="#\S+" maxlength="11">
					<input id= "TagSubmit" type="submit" value="Submit!">
				</fieldset>
			</form>
			<!-- ############### Aufgabe1a Form1 Ende -->

		</section>

		<section class="discovery" >
			<h2>Discovery</h2>

			<!-- ############### Aufgabe1a Form2 Start -->
			<form id="filter-form" action="/discovery" method="post">
				<fieldset>
					<legend>Tag suchen:</legend>
					<label>Search:</label>
                    <input name="search" type="search" id="filter_search" placeholder="IWI" pattern=".+">
					<input name="latitude" type="text" id="filter_latitude" pattern="[0-9]+([.][0-9]+)?" hidden>
					<input name="longitude" type="text" id="filter_longitude" pattern="[0-9]+([.][0-9]+)?" hidden>
					<input name="submit" type="submit" value="GO!">
				</fieldset>
			</form>
			<!-- ############### Aufgabe1a Form2 Ende -->
			<div class="zwischendrin">
				<div class="taglist">
					<ul id="results">
						<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
							<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
						<% }); %>
					</ul>
				</div>
				<div class="tagmap">
					<img id="result-img" src="images/mapview.jpg" alt="a map with locations"/>
					<div class="caption">Result map</div>
				</div>
			</div>
		</section>

	</main>

	<footer>
		<span>2017 by LKIT</span>
	</footer>

	<!-- Load JavaScripts
    ================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="./javascripts/geotagging.js"></script>

	</body>
	</html>
