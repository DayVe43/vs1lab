<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>GeoTagApp</title>
	<link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header>
	<img src="./images/location.png" width="100"
		 alt="an image of a map and location">
	<h1>GeoTagApp</h1>
	<nav>
		<a href="#">About</a> | <a href="#">Help</a> | <a
				href="/">Home</a>
	</nav>
</header>

<main>

	<section class="tagging">
		<h2>Tagging</h2>

		<!-- ############### Aufgabe1a Form1 Start -->
		<form id="tag-form" action="/tagging" method="post">
			<fieldset>
				<legend>Enter a new GeoTag</legend>
				<label>Latitude:</label>		<input name="latitude" type="text" id="tag_latitude" placeholder="49.01379" pattern="[0-9]+([.][0-9]+)?" required value =
				<%if (reslatitude !== undefined) { %>
				"<%=reslatitude_%>"
						<%} %>>
				<label>Longitude:</label>		<input name="longitude" type="text" id="tag_longitude" placeholder="49.01379" pattern="[0-9]+([.][0-9]+)?" required value =
				<%if (reslongitude !== undefined) { %>
				"<%=reslongitude_%>"
						<%} %>>
				<label>Name:</label>			<input name="name" type="text" id="tag_name" placeholder="Castle" pattern=".+" maxlength="10" required>
				<label>Hashtag:	</label>		<input name="hashtag" type="text" id="tag_hashtag" placeholder="#hashtag" pattern="#[0-9a-zA-Z]+" maxlength="11">
				<input type="submit" id="tag_submit" value="Submit">
			</fieldset>
		</form>
		<!-- ############### Aufgabe1a Form1 Ende -->

	</section>

	<section class="discovery">
		<h2>Discovery</h2>

		<!-- ############### Aufgabe1a Form2 Start -->
		<form id="filter-form" action="/discovery" method="post">
			<fieldset>
				<legend>Search Tag</legend>
				<input name="search" type="search" id="filter_search" placeholder="Search" pattern=".+" size = "50">
				<input name="latitude" type="text" id="filter_latitude" pattern="[0-9]+([.][0-9]+)?" hidden value =
				<%if (reslatitude !== undefined) { %>
				"<%=reslatitude_%>"
						<%} %>>
				<input name="longitude" type="text" id="filter_longitude" pattern="[0-9]+([.][0-9]+)?" hidden value =
				<%if (reslongitude !== undefined) { %>
				"<%=reslongitude%>"
						<%} %>>
				<input type="submit" id="filter_submit" value="GO!">
			</fieldset>
		</form>
		<!-- ############### Aufgabe1a Form2 Ende -->

		<section class="discovery_listmap">
			<div class="taglist">
				<ul id="results">
					<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
						<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
					<% }); %>
				</ul>
			</div>

			<div class="tagmap">
				<img id="result-img" src="./images/mapview.jpg" alt="a map with locations" data-tags=
				<%if (taglist !== undefined) {%>
				"<%=JSON.stringify(taglist)%>"
						<%}%>>
				<div class="caption">Result map</div>
			</div>
		</section>

	</section>

</main>

<footer>
	<span>2017 by LKIT</span>
</footer>

<!-- Load JavaScripts
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>

</body>
</html>
